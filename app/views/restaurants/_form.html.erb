        <%= f.label :address %><br>
        <%= f.text_field :address, class: "form-control", placeholder: "350 Fifth Avenue, New York, NY 55102" %>
      </div>
      <div class="form-group field">
        <%= f.label :phone %><br>
        <%= f.text_field :phone, class: "form-control", placeholder: "(123) 456-7890" %>
      </div>
      <div class="form-group field">
        <%= f.label :website %><br>
        <%= f.text_field :website, class: "form-control", placeholder: "https://www.jimmyjohns.com" %>
      </div>
      <div class="form-group field">
        <%= f.label :image %><br>
        <%= f.file_field :image, class: "form-control" %>
      </div>
      <div class="form-group actions">
        <%= f.submit class: "btn btn-danger" %>
      </div>


